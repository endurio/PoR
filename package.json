{
  "name": "por",
  "version": "1.0.0",
  "description": "Endurio Proof of Reference",
  "scripts": {
    "compile": "truffle compile --all",
    "deploy": "truffle migrate --reset --network ${NODE_ENV:-local}",
    "parser": "babel-eslint",
    "ganache": "fuser -k -n tcp 8545; ganache-cli --time 2020-05-17T08:33:15.000Z >/tmp/ganache.log 2>&1 &",
