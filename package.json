    "travislint": "eslint --ignore-path .gitignore .",
    "lint:fix": "eslint . --fix",
    "lint:sol": "solium -d contracts/"
  },
  "author": "endur.io",
  "dependencies": {
    "@openzeppelin/contracts": "^3.1.0",
    "truffle": "^5.1.31",
    "tslint": "^5.11.0",
    "web3": "1.0.0-beta.36"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.6",
    "bitcoinjs-lib": "^5.1.10",
    "chai": "^4.2.0",
    "moment": "^2.27.0"
  },
  "private": true,
